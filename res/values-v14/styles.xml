<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="light_blue" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/light_blue_solid_ActionBar</item>
        <item name="android:actionDropDownStyle">@style/light_blue_DropDownNav</item>
    </style>
    
    <style name="light_blue_solid_ActionBar">
        <item name="android:titleTextStyle">@style/light_blue_solid_ActionBar_Title</item>
        <item name="android:background">@color/light_blue</item>
        <item name="android:backgroundStacked">@color/light_blue</item>
        <item name="android:backgroundSplit">@color/light_blue</item>
    </style>

    <style name="light_blue_solid_ActionBar_Title">
    	<item name="android:textColor">@color/white</item>
	</style>
	
	<style name="light_blue_DropDownNav" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@color/white</item>
        <item name="android:titleTextStyle">@style/light_blue_solid_ActionBar_DropDown</item>
    </style>
    
    <style name="light_blue_solid_ActionBar_DropDown">
    	<item name="android:textColor">@color/black</item>
	</style>
    
</resources>